---
import ServiceCard from "../components/ServiceCard.astro";
import Layout from "../layouts/Base.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("services");
---

<Layout title="Not Found">
  <div
    id="home"
    class="relative pt-[120px] md:pt-[90px] lg:pt-[120px] md:pb-[320px] lg:pb-[360px] bg-cover bg-no-repeat bg-bottom"
    style="background-image: url(/images/hero.jpg)"
  >
    <div class="container pb-8">
      <div class="flex flex-wrap items-center -mx-4">
        <div class="w-full px-4">
          <div
            class="hero-content bg-dark/75 p-8 text-center max-w-[960px] mx-auto wow fadeInU"
            data-wow-delay=".2s"
          >
            <h1
              class="text-white font-normal text-2xl sm:text-3xl leading-snug sm:leading-snug md:leading-snug mb-8"
            >
              Page not found
            </h1>
            <p
              class="text-white font-normal text-lg leading-snug sm:leading-snug md:leading-snug mb-8"
            >
              Go back to <a class="border-b" href="/">Home</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
