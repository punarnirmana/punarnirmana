---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
const { title, description, image = "/placeholder-social.jpg" } = Astro.props;
import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description ?? SITE_DESCRIPTION} />
    <!-- head -->
    <link rel="stylesheet" href="/css/animate.css" />
    <script
      type="text/partytown"
      src="https://www.googletagmanager.com/gtag/js?id=G-ZKZB74VSEH"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-ZKZB74VSEH");
    </script>
    <!-- more head -->
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <slot />
    </main>
    <Footer />

    <script src="/js/wow.min.js" is:inline></script>
    <script src="/js/main.js" is:inline></script>
  </body>
</html>
